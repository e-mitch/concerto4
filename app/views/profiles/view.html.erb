<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
<%= render 'layouts/navigation' %>
<div class="body">
  <div id = "profile">
    <p class="profile-nav" id="profileEdit">
      <%= link_to 'Edit', edit_profile_path(@profile) %>
    <a href ='/profiles/<%=current_user.id%>/edit'>Edit</a></p>
<h1>
  <%= @profile.name %>
  </h1>
    
     <div id="socialLinksDiv">
<% if @profile.soundcloud.length != 0 %>
  <p class = "socialLinks">  
      <strong><%= link_to "Soundcloud", @profile.soundcloud %></strong>
  </p>
<%end%>
  
<% if @profile.spotify.length != 0%>
  <p class = "socialLinks">  
      <strong><%= link_to "Spotify", @profile.spotify %></strong>
  </p>
<%end%>
   
<% if @profile.youtube.length != 0 %>
 <p class = "socialLinks">  
    <strong><%= link_to "Youtube", @profile.youtube %></strong>
</p>
<%end%>
</div>
 <br>
<p>
  <strong>email:</strong>
  <%= @profile.email %>
</p>

<div class="profileSection">
  <h2>bio:</h2>
  <p>
    <%= @profile.bio%>
  </p>  
</div>

<div class="profileSection">
  <h2>interests:</h2>
  <p>
   <%= @profile.interests %>
  </p>
</div>
   
    <h1>
      Skills
    </h1>
    <div class = "userSkillsDiv">
      

<% if @userSkills.length > 0 %>    
 <% @userSkills.each do |element| %>
     <h2 class = "varietyH2"><%=element.variety%></h2>
     <li class = "skillDetails">Genre: <%= element.genre%></li>
     <li class = "skillDetails">Experience: <%= element.experience%></li>
     <li class = "skillDetails">Details: <%= element.details%></li><br>
    <p class = "profile-nav">
      <%= link_to 'Edit', edit_skill_path(element) %>
      &nbsp &nbsp <%= link_to 'Delete', skill_path(element),
              method: :delete,
              data: { confirm: 'Are you sure?' },
              :remote => true, :class => 'delete_skill'%></p>
<% end %>
<%end%>
          </div>
<p class="profile-nav">
  
    <a href='/skills/new'>Add Skill</a></p><br>
  
      </div>
</div>

