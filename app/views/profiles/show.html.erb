<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
<%= render 'layouts/navigation' %>
<div class="body">
  <div id = "profile">
    <h1>
      <%= @profile.name %>
    </h1>
   <div id="socialLinksDiv">
  <% if @profile.soundcloud.length > 1 %>
    <p class = "socialLinks">  
        <strong><%= link_to "Soundcloud", @profile.soundcloud %></strong>
    </p>
  <%end%>

  <% if @profile.spotify.length > 1%>
    <p class = "socialLinks">  
        <strong><%= link_to "Spotify", @profile.spotify %></strong>
    </p>
  <%end%>

  <% if @profile.youtube.length > 1 %>
   <p class = "socialLinks">  
      <strong><%= link_to "Youtube", @profile.youtube %></strong>
  </p>
  <%end%>
  </div>
  <p>
    <strong>email:</strong>
    <%= @profile.email %>
  </p>

  <div class="profileSection">
    <h2>bio:</h2>
    <p>
      <%= @profile.bio%>
    </p>  
  </div>

  <div class="profileSection">
    <h2>interests:</h2>
    <p>
     <%= @profile.interests %>
    </p>
  </div>
    
  <h1>
    Skills
  </h1>

  </div>
  <div>
   <% @userSkills.each do |element| %>
    <div class="skillDiv">
      
       <h2><%=element.variety%></h2>
       <p class = "skillDetails"><span class="label">Genre: </span><%= element.genre%> &nbsp &nbsp &nbsp &nbsp <span class="label">Experience:</span> <%=element.experience %> years</p>
       <p class = "skillDetails"><span class="label">Details:</span> <%= element.details%></p><br>

          </div>
  <% end %>

 <p class="link">
   <%= link_to 'All Profiles', profiles_path %>
    </p>  

  
      </div>
</div>


