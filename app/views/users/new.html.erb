<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
<%= render 'layouts/navigation' %>

<div class="body">
<h1>Sign Up</h1>
  
<%= form_for @user, :html => {:id => "userForm"} do |f|%>
  <p><%= f.label :username, "Username"%></p>
  <p><%= f.text_field :username, id: :user_username, class: "form-control"%></p>
  <div id="usernameError" class = "errormsg">
    
  </div>
  <p><%= f.label :password, "Password"%></p>
  <p><%= f.password_field :password, id: :user_password, class: "form-control"%></p>
  <div id="passwordError" class = "errormsg">
    
  </div>
<br>
  <%= f.submit data: {disable_with: false}, :class => 'btn btn-light' %>
<%end%>
  </div>

<%= javascript_pack_tag 'validateAccount', 'data-turbolinks-track': 'reload' %>

